<main class="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <a href="/" class="border-shadow mt-2 text-decoration-none text-dark"><i class="fas fa-angle-double-left"></i>All Users</a>
        </div>
    </div>
    <div class="form-title text-center">
        <h4 class="text-dark ">New User</h4>
        <span class="text-light bg-dark p-2">use the below form to create a new account</span>
    </div>

    <form action="/api/add-user" method="POST" id="add_user">

      <div class="new_user d-flex justify-content-center align-items-center flex-column mt-2">
          <div class="form-group">
              <label for="name" class="text-dark font-weight-bold">Name</label>
              <input type="text" name="name" value='' placeholder="mark stoenis" />
          </div>
          <div class="form-group">
              <label for="email" class="text-dark mx-auto font-weight-bold">email</label>
              <input type="email" name="email" value='' placeholder="example@gmail.com" />
          </div>
          <div class="form-group">
                <label for="gender" class="text-dark font-weight-bold" >gender</label>
                 <div class="radio inline">
                  <input type="radio" name="gender" value='male' />
                  <label for="male" class="radio-label">male</label>
              </div>
                 <div class="radio inline">
                  <input type="radio" name="gender" value='female' />
                  <label for="fe" class="radio-label ">female</label>
              </div>
          </div>
          <div class="form-group">
                <label for="status" class="radio-label font-weight-bold" >status</label>
                 <div class="radio inline">
                  <input type="radio" name="status" value='active' />
                  <label for="status" class="radio-label ">active</label>
              </div>
                 <div class="radio inline">
                  <input type="radio" name="status" value='inactive' />
                  <label for="inactive" class="radio-label">inactive</label>
              </div>
          </div>
          <div class="form-group">
              <button type="submit" class="btn btn-dark px-5 text-light update ">save</button>
          </div>
          
      </div>
    </form>
</main>